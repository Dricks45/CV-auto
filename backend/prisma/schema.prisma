// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Users {
  id Int @id @default(autoincrement())
  nom String
  prenom String?
  mail String @unique
  telephone String
  ville String
  photo String
  mdp String
  experiences Experiences @relation(fields: [experiencesId], references: [id])
  experiencesId Int
  formations Formations @relation(fields: [formationId], references: [id])
  formationId Int
  loisirs Loisirs @relation(fields: [loisirsId], references: [id])
  loisirsId Int
  langues Langues @relation(fields: [languesId], references: [id])
  languesId Int
}

model Experiences {
  id Int @id @default(autoincrement())
  dated String
  datef String
  poste String
  desc String
  Users Users[]
  }

  model Formations {
  id Int @id @default(autoincrement())
  dated String
  datef String
  poste String
  desc String
  Users Users[]
  }

  model Loisirs {
  id Int @id @default(autoincrement())
  desc String
  Users Users[]
  }

  model Langues {
  id Int @id @default(autoincrement())
  pays String
  Users Users[]
  }
